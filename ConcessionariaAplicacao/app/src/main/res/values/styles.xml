<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- FullScreen theme. -->
    <style name="FullScreen" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Fundo color App!-->
    <style name="Fundo">
        <item name="android:background">@drawable/fundo_app</item>
    </style>

    <!-- BotÃ£o !-->
    <style name="Botao">
        <item name="android:background">@drawable/botao_personalizado</item>
        <item name="android:textSize">@dimen/botao_tamanho_texto</item>
    </style>
    <style name="BotaoPesquisar">
        <item name="android:background">@drawable/botao_pesquisar</item>
        <item name="android:textSize">@dimen/botao_tamanho_texto</item>
    </style>
    <style name="BotaoDeletar">
        <item name="android:background">@drawable/botao_deletar</item>
        <item name="android:textSize">@dimen/botao_tamanho_texto</item>
    </style>

    <!-- Label TextInput !-->
    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/label</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/label</item>
        <item name="colorControlNormal">@color/label</item>
        <item name="colorControlActivated">@color/label</item>
    </style>


</resources>
